{
    "manifest_version": 3,
    "name": "Twilio Softphone",
    "version": "1.0",
    "description": "A softphone Chrome extension using Twilio SDK",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}